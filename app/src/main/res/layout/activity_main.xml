<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edtTxtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Title"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="27dp"
        />

    <EditText
        android:id="@+id/edtTxtSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Subtitle"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="97dp"
        android:layout_below="@+id/edtTxtTitle"/>

    <Button
        android:id="@+id/btnGet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickHandler"
        android:text="GET"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="180dp"
        android:layout_below="@+id/edtTxtSubtitle"
        />

    <Button
        android:id="@+id/btnPut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickHandler"
        android:text="PUT"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="180dp"
        android:layout_below="@+id/edtTxtSubtitle"
        android:layout_toRightOf="@+id/btnGet"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="287dp"
        android:layout_below="@id/btnGet"/>

    <ListView
        android:id="@+id/listViewNotes"
        android:layout_width="351dp"
        android:layout_height="350dp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="373dp"
        android:layout_below="@+id/textView"/>
</RelativeLayout>